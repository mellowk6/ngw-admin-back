<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nhbank.ngw.infra.user.mapper.RoleMapper">

    <resultMap id="RoleMap" type="com.nhbank.ngw.domain.user.model.Role">
        <result column="ROLE_NAME"  property="roleName"/>
        <result column="MENU_SCOPE" property="menuScope"/>
        <result column="CREATED_AT" property="createdAt"/>
        <result column="UPDATED_AT" property="updatedAt"/>
    </resultMap>

    <sql id="RoleColumns">
        ROLE_NAME, MENU_SCOPE, CREATED_AT, UPDATED_AT
    </sql>

    <!-- ===== 조회 ===== -->
    <select id="count" resultType="long">
        SELECT COUNT(*) FROM ROLES
        <where>
            <if test="roleName != null and roleName != ''">
                AND ROLE_NAME LIKE CONCAT('%', #{roleName}, '%')
            </if>
            <if test="menuLike != null and menuLike != ''">
                AND MENU_SCOPE LIKE CONCAT('%', #{menuLike}, '%')
            </if>
        </where>
    </select>

    <select id="selectPage" resultMap="RoleMap">
        SELECT <include refid="RoleColumns"/>
        FROM ROLES
        <where>
            <if test="roleName != null and roleName != ''">
                AND ROLE_NAME LIKE CONCAT('%', #{roleName}, '%')
            </if>
            <if test="menuLike != null and menuLike != ''">
                AND MENU_SCOPE LIKE CONCAT('%', #{menuLike}, '%')
            </if>
        </where>
        ORDER BY ROLE_NAME
        LIMIT #{size} OFFSET #{offset}
    </select>

    <!-- ===== upsert에서 쓰는 update / insert ===== -->
    <update id="updateById" parameterType="com.nhbank.ngw.domain.user.model.Role">
        UPDATE ROLES
        SET MENU_SCOPE = #{menuScope},
            UPDATED_AT = CURRENT_TIMESTAMP
        WHERE ROLE_NAME = #{roleName}
    </update>

    <insert id="insert" parameterType="com.nhbank.ngw.domain.user.model.Role">
        INSERT INTO ROLES (ROLE_NAME, MENU_SCOPE, CREATED_AT, UPDATED_AT)
        VALUES (#{roleName}, #{menuScope}, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP)
    </insert>

    <!-- ===== 삭제(복수) ===== -->
    <delete id="deleteAll">
        DELETE FROM ROLES
        WHERE ROLE_NAME IN
        <foreach collection="roleNames" item="n" open="(" separator="," close=")">
            #{n}
        </foreach>
    </delete>

    <!-- (FK가 있으면 먼저 연결 테이블 정리)
    <delete id="deleteUserRoleByRoles">
      DELETE FROM USER_ROLES
       WHERE ROLE_NAME IN
       <foreach collection="roleNames" item="n" open="(" separator="," close=")">
         #{n}
       </foreach>
    </delete>
    -->

</mapper>
